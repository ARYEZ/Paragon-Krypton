    <!-- ========================================= -->
    <!-- HomeMenu Extra Info & Submenus Indicators -->
    <!-- ========================================= -->
    <include name="HomeMenuExtraInfo">
        <control type="group">
            <!-- Submenus Indicators -->
            <control type="group">
                <include>HomeMenu_Submenu_HiddenAnimation</include>
                <animation type="Conditional" condition="ControlGroup(21).HasFocus | Control.HasFocus(23)">
                    <effect type="slide" start="0,0" end="0,-50" time="200" tween="sine" easing="in"/>
                    <effect type="fade" start="100" end="0" time="150"/>
                </animation>
                <control type="wraplist" id="31">
                    <left>0</left>
                    <top>0</top>
                    <height>2</height>
                    <width>2</width>
                    <orientation>horizontal</orientation>
                    <focusposition>0</focusposition>
                    <autoscroll time="4000">true</autoscroll>
                    <viewtype>list</viewtype>
                    <itemlayout width="2" height="2"/>
                    <focusedlayout width="2" height="2"/>
                    <content>
                        <item id="1">
                            <label>-</label>
                            <onclick>noop</onclick>
                            <visible>!IsEmpty(Container(20).ListItem.Property(widgetName)) + !Skin.HasSetting(AutoHideHomeWidgets)</visible>
                        </item>
                        <item id="2">
                            <label>-</label>
                            <onclick>noop</onclick>
                            <visible>SubString(Container(20).ListItem.Property(hasSubmenu),True)</visible>
                        </item>
                    </content>
                </control>
                <control type="grouplist">
                    <left>47</left>
                    <top>480</top>
                    <width>600</width>
                    <align>left</align>
                    <itemgap>6</itemgap>
                    <include>HomeMenu_OpenCloseSlideAnimation</include>
                    <include>HomeMenu_ExtraInfo_ScrollAnimation</include>
                    <visible>Container(31).HasFocus(1)</visible>
                    <orientation>horizontal</orientation>
                </control>
                <control type="grouplist">
                    <left>47</left>
                    <top>480</top>
                    <width>600</width>
                    <align>left</align>
                    <itemgap>6</itemgap>
                    <include>HomeMenu_OpenCloseSlideAnimation</include>
                    <include>HomeMenu_ExtraInfo_ScrollAnimation</include>
                    <visible>Container(31).HasFocus(2)</visible>
                    <orientation>horizontal</orientation>
                </control>
            </control>
            <!-- Weather Info -->
            <control type="group">
                <left>42</left>
                <top>564</top>
                <include>HomeMenu_ExtraInfo_HiddenAnimation</include>
                <include>HomeMenu_OpenCloseSlideAnimation</include>
                <visible>StringCompare(Container(20).ListItem.Property(defaultID),weather) + !Skin.HasSetting(HideExtraInfo) + !IsEmpty(Window(Weather).Property(Current.Temperature)) + !SubString(Window(Weather).Property(Current.ConditionIcon),na)</visible>
                <animation type="Conditional" condition="ControlGroup(21).HasFocus">
                    <effect type="slide" start="0,0" end="0,-35" time="200" tween="sine" easing="in"/>
                    <effect type="fade" start="100" end="0" time="150"/>
                </animation>
                <control type="image">
                    <left>-10</left>
                    <top>5</top>
                    <width>82</width>
                    <height>82</height>
                    <aspectratio>stretch</aspectratio>
                    <texture>$INFO[Window(Weather).Property(Current.FanartCode),resource://resource.images.weathericons.outline/,.png]</texture>
                    <colordiffuse>homeinfo</colordiffuse>
                    <animation type="Conditional" condition="true" loop="true" reversible="false">
                        <effect type="fade" start="0" end="100" time="300"/>
                        <effect type="fade" start="100" end="0" delay="20000" time="300"/>
                        <effect type="slide" end="0" time="21600"/>
                    </animation>
                </control>
                <control type="grouplist">
                    <left>78</left>
                    <top>26</top>
                    <width>590</width>
                    <height>50</height>
                    <itemgap>-2</itemgap>
                    <align>left</align>
                    <orientation>horizontal</orientation>
                    <animation type="Conditional" condition="true" loop="true" reversible="false">
                        <effect type="fade" start="0" end="100" time="300"/>
                        <effect type="fade" start="100" end="0" delay="20000" time="300"/>
                        <effect type="slide" end="0" time="21600"/>
                    </animation>
                    <control type="group">
                        <width>590</width>
                    </control>
                </control>
                <!-- Weather Provider Logo -->
                <control type="image">
                    <width>270</width>
                    <height>90</height>
                    <colordiffuse>homeinfo</colordiffuse>
                    <aspectratio align="center" aligny="center">keep</aspectratio>
                    <texture>$INFO[Window(Weather).Property(WeatherProviderLogo)]</texture>
                    <animation type="Conditional" condition="true" loop="true" reversible="false">
                        <effect type="fade" start="0" end="100" delay="20300" time="300"/>
                        <effect type="fade" start="100" end="0" delay="21300" time="300"/>
                    </animation>
                </control>
            </control>
        </control>
    </include>
