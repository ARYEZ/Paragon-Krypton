<includes>
    <!-- Dialog Animation Include - Smoother transitions -->
    <include name="DialogAnimation">
        <animation type="WindowOpen" reversible="false">
            <!-- Slower, smoother fade in -->
            <effect type="fade" start="0" end="100" time="300" delay="0" tween="cubic" easing="out"/>
            <!-- Gentler zoom effect -->
            <effect type="zoom" start="98" end="100" center="640,360" time="300" delay="0" tween="cubic" easing="out"/>
        </animation>
        <animation type="WindowClose" reversible="false">
            <!-- Quick fade out to prevent overlap -->
            <effect type="fade" start="100" end="0" time="200" tween="cubic" easing="in"/>
            <!-- Minimal zoom on close -->
            <effect type="zoom" start="100" end="102" center="640,360" time="200" tween="cubic" easing="in"/>
        </animation>
    </include>
    <!-- Smooth Background Transition -->
    <include name="BackgroundTransition">
        <animation type="WindowOpen" reversible="false">
            <effect type="fade" start="0" end="100" time="400" tween="cubic" easing="out"/>
        </animation>
        <animation type="WindowClose" reversible="false">
            <effect type="fade" start="100" end="0" time="200" tween="cubic" easing="in"/>
        </animation>
    </include>
    <!-- List Focus Animation - Smoother -->
    <include name="ListFocusAnimation">
        <animation type="Focus">
            <effect type="fade" start="70" end="100" time="150" tween="cubic" easing="out"/>
        </animation>
        <animation type="Unfocus">
            <effect type="fade" start="100" end="70" time="150" tween="cubic" easing="in"/>
        </animation>
    </include>
    <!-- Content Slide Animation for transitions -->
    <include name="ContentSlideIn">
        <animation type="WindowOpen" reversible="false">
            <effect type="slide" start="0,30" end="0,0" time="300" delay="100" tween="cubic" easing="out"/>
            <effect type="fade" start="0" end="100" time="300" delay="100" tween="cubic" easing="out"/>
        </animation>
    </include>
