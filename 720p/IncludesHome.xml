                    <width>1000</width>
                    <height>50</height>
                    <itemgap>15</itemgap>
                    <align>left</align>
                    <orientation>horizontal</orientation>
                </control>
            </control>
            <control type="group">
                <left>668</left>
                <top>275</top>
                <control type="label">
                    <posx>-835</posx>
                    <posy>-76</posy>
                    <width>1000</width>
                    <height>200</height>
