<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <!-- ===================== -->
    <!-- HomeMenu List Buttons -->
    <!-- ===================== -->
    <include name="HomeMenuWraplist">
        <include/>
        <include>BackgroundItems46</include>
        <control type="group">
            <control type="wraplist" id="20">
                <description>Home Container</description>
                <include>HomeMenu_OpenCloseSlideAnimation</include>
                <include>HomeMenu_Submenu_HiddenAnimation</include>
                <left>525</left>
                <top>275</top>
                <width>1280</width>
                <height>720</height>
                <align>center</align>
                <onup condition="Control.IsVisible(25)">SetFocus(25)</onup>
                <onup condition="String.IsEmpty(Container(20).ListItem.Property(widgetPath)) | String.IsEqual(Container(25).NumItems,0)">SetFocus(21)</onup>
                <ondown condition="[String.Contains(Container(20).ListItem.Property(hasSubmenu),True) + Integer.IsGreater(Container(23).NumItems,0)]">SetFocus(23)</ondown>
                <onleft>20</onleft>
                <onright>20</onright>
                <itemgap>0</itemgap>
                <orientation>vertical</orientation>
                <focusposition>1</focusposition>
                <scrolltime tween="Quadratic" easing="out">300</scrolltime>
                <itemlayout width="1280">
                    <control type="label">
                        <left>0</left>
                        <top>150</top>
                        <width>400</width>
                        <textcolor>99white</textcolor>
                        <shadowcolor>black</shadowcolor>
                        <font/>
                        <align>center</align>
                        <label/>
                    </control>
                </itemlayout>
                <focusedlayout width="500">
                    <control type="group">
                        <top>-50</top>
                        <control type="label">
                            <left>-218</left>
                            <top>217</top>
                            <width>1280</width>
                            <textcolor>black</textcolor>
                            <font>FontSize_100</font>
                            <align>center</align>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                        <control type="label">
                            <left>-215</left>
                            <top>213</top>
                            <width>1280</width>
                            <textcolor>white</textcolor>
                            <font>FontSize_100</font>
                            <align>center</align>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                        <control type="image">
                            <left>240</left>
                            <top>275</top>
                            <width>21</width>
                            <height>18</height>
                            <texture background="true"/>
                            <colordiffuse>CCFFFFFF</colordiffuse>
                            <visible>!ControlGroup(21).HasFocus + !Control.HasFocus(23)</visible>
                            <visible>IntegerGreaterThan(Container(23).NumItems,0)</visible>
                            <animation effect="fade" time="100" reversible="false">Visible</animation>
                            <animation effect="fade" time="100" reversible="false">Hidden</animation>
                        </control>
                    </control>
                </focusedlayout>
                <focusedlayout width="360">
		</focusedlayout>
                <content>
                    <include>skinshortcuts-mainmenu</include>
                </content>
            </control>
        </control>
    </include>
    <!-- ========================================= -->
    <!-- HomeMenu Extra Info & Submenus Indicators -->
    <!-- ========================================= -->
    <include name="HomeMenuExtraInfo">
